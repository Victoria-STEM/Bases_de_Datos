
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema-instance">
    <xs:element name="digidex">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="digimon" minOccurs="2" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="name" type="xs:string"/>
                            <xs:element name="type">
                                <xs:simpleType>
                                    <xs:restriction base="xs:string">
                                        <xs:enumeration value="Virus"/>
                                        <xs:enumeration value="Vaccine"/>
                                        <xs:enumeration value="Data"/>
                                    </xs:restriction>
                                </xs:simpleType>
                            </xs:element>
                            <xs:element name="level"> 
                                <xs:simpleType>
                                    <xs:restriction base="xs:string">
                                        <xs:enumeration value="Rookie"/>
                                        <xs:enumeration value="Champion"/>
                                        <xs:enumeration value="Ultimate"/>
                                        <xs:enumeration value="Mega"/>
                                    </xs:restriction>
                                </xs:simpleType>
                            </xs:element>
                            <xs:element name="abilities">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="ability" type="xs:string" minOccurs="1" maxOccurs="unbounded"/>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="baseStats">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="HP">
                                            <xs:simpleType>
                                                <xs:restriction base="xs:interger">
                                                    <xs:minExclusive value="1"/>
                                                    <xs:maxExclusive value="999"/>
                                                </xs:restriction>
                                            </xs:simpleType>
                                        </xs:element>
                                        <xs:element name="ATK">
                                            <xs:simpleType>
                                                <xs:restriction base="xs:integer">
                                                    <xs:minExclusive value="1"/>
                                                    <xs:maxExclusive value="500"/>
                                                </xs:restriction>
                                            </xs:simpleType>
                                        </xs:element>
                                        <xs:element name="DEF">
                                            <xs:simpleType> 
                                                <xs:restriction base="xs:integer">
                                                    <xs:minExclusive value="1"/>
                                                    <xs:maxExclusive value="400"/>
                                                </xs:restriction>
                                            </xs:simpleType>
                                        </xs:element>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                            <xs:element name= "legendary" type="xs:string" minOccurs="0"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>